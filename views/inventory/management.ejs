<h1><%= title %></h1>

<div class="management-container">
  <% if (locals.message) { %>
    <div class="flash"><%= message %></div>
  <% } %>

  <p>Welcome to the Inventory Management System</p>
  
  <div class="management-links">
    <a href="/inv/add-classification" class="btn btn-primary">Add New Classification</a>
    <a href="/inv/add-inventory" class="btn btn-primary">Add New Inventory Item</a>
  </div>

  <h2>Manage Inventory</h2>
  <p>Select a classification from the list below to see the items belonging to that classification.</p>
  
  <% if (locals.classificationSelect) { %>
    <%- classificationSelect %>
  <% } %>

  <table id="inventoryDisplay"></table>
  
  <noscript>JavaScript must be enabled to use this page.</noscript>
</div>

<script src="../../js/inventory.js"></script>

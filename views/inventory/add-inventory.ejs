<h1><%= title %></h1>

<div class="inventory-container">
  <% if (locals.message) { %>
    <div class="flash"><%= message %></div>
  <% } %>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form method="post" action="/inv/add-inventory" class="inventory-form">
    <div class="form-group">
      <label for="classificationList">Classification: <span class="required">*</span></label>
      <%- locals.classList %>
    </div>

    <div class="form-group">
      <label for="inv_make">Vehicle Make: <span class="required">*</span></label>
      <input 
        type="text" 
        id="inv_make" 
        name="inv_make" 
        required 
        minlength="3"
        value="<%= locals.inv_make || '' %>"
        placeholder="e.g., Chevrolet, Ford">
    </div>

    <div class="form-group">
      <label for="inv_model">Vehicle Model: <span class="required">*</span></label>
      <input 
        type="text" 
        id="inv_model" 
        name="inv_model" 
        required 
        minlength="3"
        value="<%= locals.inv_model || '' %>"
        placeholder="e.g., Silverado, F-150">
    </div>

    <div class="form-group">
      <label for="inv_year">Year: <span class="required">*</span></label>
      <input 
        type="number" 
        id="inv_year" 
        name="inv_year" 
        required 
        min="1900"
        max="<%= new Date().getFullYear() + 1 %>"
        value="<%= locals.inv_year || '' %>"
        placeholder="e.g., 2023">
    </div>

    <div class="form-group">
      <label for="inv_description">Description: <span class="required">*</span></label>
      <textarea 
        id="inv_description" 
        name="inv_description" 
        required 
        minlength="10"
        placeholder="Provide a detailed description of the vehicle"><%= locals.inv_description || '' %></textarea>
    </div>

    <div class="form-group">
      <label for="inv_image">Image Path: <span class="required">*</span></label>
      <input 
        type="text" 
        id="inv_image" 
        name="inv_image" 
        required 
        value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>"
        placeholder="/images/vehicles/">
    </div>

    <div class="form-group">
      <label for="inv_thumbnail">Thumbnail Path: <span class="required">*</span></label>
      <input 
        type="text" 
        id="inv_thumbnail" 
        name="inv_thumbnail" 
        required 
        value="<%= locals.inv_thumbnail || '/images/vehicles/no-image.png' %>"
        placeholder="/images/vehicles/">
    </div>

    <div class="form-group">
      <label for="inv_price">Price: <span class="required">*</span></label>
      <input 
        type="number" 
        id="inv_price" 
        name="inv_price" 
        required 
        step="0.01"
        min="0"
        value="<%= locals.inv_price || '' %>"
        placeholder="e.g., 25000">
    </div>

    <div class="form-group">
      <label for="inv_miles">Mileage: <span class="required">*</span></label>
      <input 
        type="number" 
        id="inv_miles" 
        name="inv_miles" 
        required 
        min="0"
        value="<%= locals.inv_miles || '' %>"
        placeholder="e.g., 15000">
    </div>

    <div class="form-group">
      <label for="inv_color">Color: <span class="required">*</span></label>
      <input 
        type="text" 
        id="inv_color" 
        name="inv_color" 
        required 
        value="<%= locals.inv_color || '' %>"
        placeholder="e.g., Black, White, Silver">
    </div>

    <button type="submit" class="btn btn-submit">Add Inventory Item</button>
    <a href="/inv/" class="btn btn-cancel">Cancel</a>
  </form>
</div>

<h1><%= title %></h1>

<div class="inventory-container">
  <% if (locals.message) { %>
    <div class="flash"><%= message %></div>
  <% } %>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <p><strong>Confirm Deletion - The delete is permanent.</strong></p>

  <form method="post" action="/inv/delete" class="inventory-form">
    <div class="form-group">
      <label for="inv_make">Vehicle Make:</label>
      <input 
        type="text" 
        id="inv_make" 
        name="inv_make" 
        value="<%= locals.inv_make || '' %>"
        readonly>
    </div>

    <div class="form-group">
      <label for="inv_model">Vehicle Model:</label>
      <input 
        type="text" 
        id="inv_model" 
        name="inv_model" 
        value="<%= locals.inv_model || '' %>"
        readonly>
    </div>

    <div class="form-group">
      <label for="inv_year">Year:</label>
      <input 
        type="number" 
        id="inv_year" 
        name="inv_year" 
        value="<%= locals.inv_year || '' %>"
        readonly>
    </div>

    <div class="form-group">
      <label for="inv_price">Price:</label>
      <input 
        type="number" 
        id="inv_price" 
        name="inv_price" 
        step="0.01"
        value="<%= locals.inv_price || '' %>"
        readonly>
    </div>

    <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">

    <button type="submit" class="btn btn-delete">Delete Vehicle</button>
    <a href="/inv/" class="btn btn-cancel">Cancel</a>
  </form>
</div>

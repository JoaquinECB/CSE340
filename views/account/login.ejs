<h1><%= title %></h1>

<div class="login-container">
  <% if (locals.message) { %>
      <div class="flash"><%= message %></div>
  <% } %>

  <form method="post" action="/account/login" class="login-form">
      <label for="account_email">Email: <span class="required">*</span></label>
      <input type="email" id="account_email" name="account_email" required placeholder="Enter a valid email address">

      <label for="account_password">Password: <span class="required">*</span></label>
      <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

      <button type="submit" class="login-btn">LOGIN</button>
  </form>

  <p class="signup-text">No account? <a href="/account/register">Sign-up</a></p>
</div>
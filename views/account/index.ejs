<h1><%= title %></h1>

<% if (locals.message) { %>
  <div class="flash"><%= message %></div>
<% } %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<h2>Welcome <%= res.locals.accountData.account_firstname %></h2>

<p>
  <a href="/account/update/<%= res.locals.accountData.account_id %>">Update Account Information</a>
</p>

<% if (res.locals.accountData.account_type === "Employee" || res.locals.accountData.account_type === "Admin") { %>
  <h3>Inventory Management</h3>
  <p>
    <a href="/inv/">Go to Inventory Management</a>
  </p>
<% } %>

